<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="32dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvMainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:layout_marginBottom="64dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/btnBai1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBai1"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:text="Bài tập 1"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/custom_button_bg"
        android:textColor="#4CAF50"
        android:elevation="8dp"
        android:stateListAnimator="@null"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/btnBai2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMainTitle" />

    <Button
        android:id="@+id/btnBai2"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:text="Bài tập 2"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/custom_button_bg"
        android:textColor="#4CAF50"
        android:elevation="8dp"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBai1" />

</androidx.constraintlayout.widget.ConstraintLayout>